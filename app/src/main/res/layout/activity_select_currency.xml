<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/h"
    tools:context=".activity.SelectCurrency">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/six"
        android:id="@+id/toolbarSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searceViewS"
            android:background="@drawable/shape_for_editext"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:hint="@string/search_currency_name"
            android:layout_height="40dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewSelect"
        android:layout_below="@+id/toolbarSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>