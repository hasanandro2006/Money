<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalMoneyManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

<!--        // for states bar-->
        <item name="colorPrimary">@color/six</item>

        <!-- Set the background color to white -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Set the text color to black for the entire app -->
        <item name="android:textColor">@android:color/black</item>

<!--        <item name="android:windowLightStatusBar">true</item>-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="Theme.FinalMoneyManager" parent="Base.Theme.FinalMoneyManager" />

    <!-- To remove status bar -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="RoundFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/RoundShapeAppearance</item>
    </style>

    <style name="RoundShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/white</item>
    </style>

</resources>